<body>
  <link rel="stylesheet" href="http://naokiyokoyama.github.io/webdesign/cdn/portfolio.css">
  <div id="Container" class="container">
    <!-- <center> -->
      <div class="row">
        <div class="col-sm-6">
          <center>
            <h2>Filter: </h2>
            <button type="button" aria-hidden="true" class="btn btn-default btn-lg filter" data-filter="all">All</button>
            <button type="button" aria-hidden="true" class="btn btn-default btn-lg filter" data-filter=".Faves">My Favorites</button>
            <button type="button" aria-hidden="true" class="btn btn-default btn-lg filter" data-filter=".Today">Today</button>
            <button type="button" aria-hidden="true" class="btn btn-default btn-lg filter" data-filter=".breakfast">Breakfast</button>
            <button type="button" aria-hidden="true" class="btn btn-default btn-lg filter" data-filter=".lunch">Lunch</button>
            <button type="button" aria-hidden="true" class="btn btn-default btn-lg filter" data-filter=".dinner">Dinner</button>
         </center>
          <br>  
        </div>

        <div class="col-sm-6">
          <center>
            <h2>Sort: </h2>
            <button type="button" aria-hidden="true" class="btn btn-default btn-lg sort" data-sort="default">Default</button>
            <button type="button" aria-hidden="true" class="btn btn-default btn-lg sort" data-sort="freq:desc">Most Common</button>
            <button type="button" aria-hidden="true" class="btn btn-default btn-lg sort" data-sort="freq:asc">Rarest</button>
           </center>
        </div>
      </div>
    <!-- </center> -->
    <h2>Foods</h2>
    <%= form_tag action: :submit do %>
      <% counter = 1 %>
      <% row = '' %>
      <% @foods.each do |food| %>
        <% if food.name.length < 30 %>
          <div class=
            <% if counter % 3 == 0 %>
              <% row = ''%>
            <% else %>
              <% row = ''%>
            <% end %>
            '<%= row %>'
          >
            <% classy = 'col-md-4 mix '%>
              <div class=
              <% if @user_foods.include? food.name %>
                <% classy << 'Faves '%>
              <% end %>
              <% if food.dining_halls.include? 'International Village' %>
                <% classy << 'IV '%>
              <% end %>
              <% if food.dining_halls.include? 'Stetson West' %>
                <% classy << 'SWest '%>
              <% end %>
              <% if food.dining_halls.include? 'Stetson East' %>
                <% classy << 'SEast '%>
              <% end %>
              <% if food.dining_halls.include? "Outtakes" %>
                <% classy << 'Outtakes '%>
              <% end %>
              <% if food.available %>
                <% classy << 'Today '%>
              <% end %>
              <% if food.meals.include? 'breakfast' %>
                <% classy << 'breakfast '%>
              <% end %>
              <% if food.meals.include? 'lunch' %>
                <% classy << 'lunch '%>
              <% end %>
              <% if food.meals.include? 'dinner' %>
                <% classy << 'dinner '%>
              <% end %>
              '<%= classy %>'

              data-freq=
              '<%= food.count %>'
              >
                <% if @user_foods.include? food.name %>
                  <%= check_box_tag("#{food.name}", "checked", true) %>
                <% else %>
                  <%= check_box_tag("#{food.name}", "checked", false) %>
                <% end %>
                <%= label_tag("#{food.name}", "#{food.name}") %>
              </div>
          </div>

        <% counter = counter + 1 %>
        <% end %>
      <% end %>  
    <center style = "padding-bottom: 40px; font-family: Cambria">
      <div class="row"></div>
      <div class="row">
      <%= submit_tag "Submit", class: "btn btn-primary btn-lg" %>
      </div>
    </center>  
    <% end %>
  </div>
</body>
<style>
  .mix {
    font-size: 20px;
  }
  h2{
    font-family: Cambria;
  }
  .btn{
    font-family: Cambria;
    background-color: #990000;
    color: white;
  }
</style>